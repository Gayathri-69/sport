<section>
    <div class="button" style="width: 100%;">
      <button class="my-4" id="createSportBtns" style="padding: 10px;margin-right: 67%;"
        onclick="window.location.href='/all_sports'">
        <- Back </button>
          <button class="my-8" id="createSportBtn" style="margin-right: 10%; "
            onclick="window.location.href='/input_session'">
            CREATE SESSION
          </button>
    </div>
    <% if(check_admin_are_not){ %>
      <div>
        <button
          class="btn btn-primary"
          id="btnOne"
          onclick="window.location.href='/update_sports/:<%= id %>/:<%= sports_name %>'"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20%"
            height="20%"
            fill="currentColor"
            class="bi bi-pencil"
            viewBox="0 0 16 16"
          >
            <path
              d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"
            />
          </svg>
          Edit
        </button>
        <button
          class="btn btn-danger"
          id="btnTwo"
          onclick="deleteSports('<%= id %>','<%=sports_name %>')"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20%"
            height="20%"
            fill="currentColor"
            class="bi bi-trash3"
            viewBox="0 0 16 16"
          >
            <path
              d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"
            />
          </svg>
          Delete
        </button>
      </div>
      <%}%>
      <script>
        var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");
      const deleteSports = (id, sp_name) => {
        if (confirm("Are you sure to delete this sport!")) {
          fetch(`/all_sports/${id}/del/${sp_name}`, {
            method: "delete",
            headers: { "content-Type": "application/json" },
            body: JSON.stringify({
              _csrf: token,
            }),
          })
            .then((res) => {
              if (res.ok) {
                window.location.reload();
              }
            })
            .catch((err) => console.log(err));
        }
      };
      </script>
    <p style="width: 97%" class="fw-bold h3 text-white my-4">
      Upcoming Sessions for
      <span style="font-family: cursive; color: gold">
        <%= title %> #<%= data.length %>
      </span>
    </p>
    <%if(data.length==0){%>
      <h1 style="color: red; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: bold;">No session
        has been added ,yet!</h1>
      <%}%>
        <div class="grid">
          <% for(var i=0; i < data.length; i++) { %>
            <div class="one" onclick="window.location.href='/session_des/:<%= data[i].id %>'">
              <div class="cardOne h4 fw-bold" style="
              display: flex;
              cursor: pointer;
              text-align: center;
              align-items: center;
              justify-content: center;
              align-items: center;
              flex-direction: row;
            ">
                <% if(data[i].add_player==data[i].total_players-1){ %>
                  <p style="padding: 5px; margin: 5px">
                    <%= data[i].session_date %><span style="color:rgb(27, 168, 27); font-size: 19px;">@</span>
                      <%= data[i].time %>
                  </p>
  
  
              </div>
              <p style="
                  font-size: 1.6vw;
                  font-weight: bold;
                  margin-top: 12px;
                  margin-left: 25px;
                  color: red;
                ">
                Last Slot
              </p>
              <%} else if((data[i].total_players - data[i].add_player)==0){%>
                <p style="padding: 5px; margin: 5px">
                  <%= data[i].session_date %><span style="color:rgb(67, 67, 67); font-size: 19px;">@</span>
                    <%= data[i].time %>
                </p>
  
  
            </div>
            <p style="
                  font-size: 1.6vw;
                  font-weight: bold;
                  margin-top: 12px;
                  margin-left: 25px;
                  color: red;
